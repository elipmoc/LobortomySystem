<%= image_tag(@image.image_name,width: '50%') %>

  <div>
    <% @image.chara_mappings.each do |chara_mapping| %>
      <%= chara_mapping.chara.chara_name %>
        <%= button_to "削除", {action: "destroy", id: chara_mapping.id ,controller: "chara_mapping"}, {method: :delete} %>
          <br>
          <% end %>
  </div>
  <div>
    <%= form_tag('/chara_mapping', method: :post)do %>
      <%= hidden_field_tag 'chara_mapping[image_id]', @image.id %>
        <%= select :chara_mapping, :chara_id, select_chara %>
          <br>
          <%= button_tag '追加'%>
            <% end %>
  </div>
  <div>
    <%= form_for(@image) do |f| %>
      セリフ：
      <br>
      <%= f.text_field :serif_name, size: '60%' %>
        <br> セリフ読みがな：
        <br>
        <%= f.text_field :serif_ruby_name, size: '60%' %>
          <br>
          <%= button_tag '編集を完了する'%>
            <% end %>
  </div>